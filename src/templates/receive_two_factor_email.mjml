<mjml>
  <mj-head>
    <mj-font name="Lato" href="https://fonts.googleapis.com/css2?family=Lato&display=swap" />
    <mj-attributes>
      <mj-all font-family="Lato, sans-serif" color="cornflowerblue" />
      <mj-text font-size="16px" line-height="1.5" />
      <mj-button background-color="cornflowerblue" color="#ffffff" font-size="16px" />
    </mj-attributes>
  </mj-head>
  <mj-body background-color="#000000">
    <mj-section>
      <mj-column>
        <mj-text font-size="24px" font-weight="bold" align="center" color="cornflowerblue">
          Two-Factor Authentication
        </mj-text>
        <mj-text align="center" color="cornflowerblue" font-size="17px">
          Hii Buddy! To complete your login, please enter the following OTP within the next few minutes.
        </mj-text>
        <mj-text font-size="32px" font-weight="bold" align="center" color="cornflowerblue">
          {{otp}}
        </mj-text>
        <mj-text font-size="15px" align="center" color="#666666">
          This code will expire in 10 minutes. If you didn't request this OTP, please disregard this email.
        </mj-text>
      </mj-column>
    </mj-section>
    <mj-section>
      <mj-column>
        <mj-text font-size="12px" color="#666666" align="center">
          &copy; 2025 YourCompany. All rights reserved.
        </mj-text>
      </mj-column>
    </mj-section>
  </mj-body>
</mjml>
